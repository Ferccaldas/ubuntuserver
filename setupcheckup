# 6. Verificar existÃªncia do script de backup
echo -e "\nğŸ“Œ Script de backup:"
[ -f /usr/local/bin/backup_influxdb.sh ] && echo "âœ… Script de backup existe." || echo "âŒ Script de backup nÃ£o localizado."
