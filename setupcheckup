# 2. Verificar status do Node-RED via PM2
echo -e "\nğŸ“Œ STATUS DO Node-RED via PM2:"
pm2 list | grep -q "node-red" && echo "âœ… Node-RED rodando pelo PM2" || echo "âŒ Node-RED nÃ£o estÃ¡ rodando"
