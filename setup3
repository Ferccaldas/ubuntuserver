#!/bin/bash
echo "ğŸ”— Etapa 3: Instalando Node-RED + Mosquitto..."

# Node-RED e PM2
sudo npm install -g --unsafe-perm node-red
sudo npm install -g pm2

# Gera estrutura inicial do Node-RED
node-red --help > /dev/null 2>&1 &
sleep 5
pkill -f "node-red"

# Configura o arquivo settings.js para aceitar conexÃµes externas
echo "ğŸ”§ Configurando uiHost para acesso externo..."
sed -i "s|// uiHost:.*|uiHost: \"0.0.0.0\",|" ~/.node-red/settings.js

# Inicia o Node-RED com PM2 usando binding externo
pm2 start bash --name node-red -- -c "HOST=0.0.0.0 node-red"
pm2 save

# AutenticaÃ§Ã£o Node-RED
NR_CONFIG=~/.node-red/settings.js
if grep -q "adminAuth" "$NR_CONFIG"; then
  echo "ğŸ” AutenticaÃ§Ã£o jÃ¡ configurada no Node-RED."
else
  echo "ğŸ” Configurando autenticaÃ§Ã£o no Node-RED..."
  PASSWORD_HASH=$(node -e "console.log(require('bcryptjs').hashSync('admin123', 8))")
  sed -i "/^module.exports = {/a\ \ \ \ adminAuth: {\n\
    \ \ \ \ \ \ type: \"credentials\",\n\
    \ \ \ \ \ \ users: [{\n\
    \ \ \ \ \ \ \ \ username: \"admin\",\n\
    \ \ \ \ \ \ \ \ password: \"$PASSWORD_HASH\",\n\
    \ \ \ \ \ \ \ \ permissions: \"*\"\n\
    \ \ \ \ \ \ }]\n\
  \ \ \ \ }," $NR_CONFIG
fi

# Mosquitto MQTT
sudo apt install -y mosquitto mosquitto-clients
sudo systemctl enable mosquitto
sudo systemctl start mosquitto

echo ""
echo "âœ… Node-RED instalado e configurado com PM2 + acesso externo liberado (porta 1880)"
echo "ğŸ” Login padrÃ£o: admin / admin123"
echo "ğŸ“¡ MQTT Broker ativo na porta 1883"
